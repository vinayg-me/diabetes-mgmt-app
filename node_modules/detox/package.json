{
  "name": "detox",
  "description": "E2E tests and automation for mobile",
  "version": "17.14.5",
  "bin": {
    "detox": "local-cli/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wix/Detox.git"
  },
  "nativePackage": true,
  "bugs": {
    "url": "https://github.com/wix/Detox/issues"
  },
  "homepage": "https://github.com/wix/Detox#readme",
  "main": "./src/index.js",
  "author": "Tal Kol <talkol@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "node scripts/build.js",
    "lint": "eslint runners src scripts",
    "unit": "jest --coverage --verbose",
    "pretest": "npm run lint",
    "test": "npm run unit",
    "posttest": "cp coverage/lcov.info coverage/unit.lcov",
    "unit:watch": "jest --watch",
    "prepublish": "npm run build",
    "postinstall": "node scripts/postinstall.js"
  },
  "devDependencies": {
    "eslint": "^4.11.0",
    "eslint-plugin-node": "^6.0.1",
    "jest": "^26.5.0",
    "jest-circus": "^26.5.2",
    "jest-environment-node": "^26.5.0",
    "mocha": ">=6.0.0",
    "mockdate": "^2.0.1",
    "prettier": "1.7.0",
    "react-native": "0.62.x",
    "wtfnode": "^0.8.0"
  },
  "dependencies": {
    "bunyan": "^1.8.12",
    "bunyan-debug-stream": "^1.1.0",
    "chalk": "^2.4.2",
    "child-process-promise": "^2.2.0",
    "find-up": "^4.1.0",
    "fs-extra": "^4.0.2",
    "funpermaproxy": "^1.0.1",
    "get-port": "^2.1.0",
    "ini": "^1.3.4",
    "lodash": "^4.17.5",
    "minimist": "^1.2.0",
    "proper-lockfile": "^3.0.2",
    "resolve-from": "^5.0.0",
    "sanitize-filename": "^1.6.1",
    "shell-quote": "^1.7.2",
    "signal-exit": "^3.0.3",
    "tail": "^2.0.0",
    "telnet-client": "1.2.8",
    "tempfile": "^2.0.0",
    "which": "^1.3.1",
    "ws": "^3.3.1",
    "yargs": "^16.0.3",
    "yargs-unparser": "^2.0.0"
  },
  "peerDependencies": {
    "jest-circus": "26.0.x - 26.4.x || >=26.5.2",
    "jest-environment-node": ">=25.0.0",
    "mocha": ">=6.0.0"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/__tests__/setupJest.js"
    ],
    "testEnvironment": "node",
    "roots": [
      "node_modules",
      "src",
      "local-cli"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "local-cli/test.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "__tests__",
      "local-cli/utils",
      "src/artifacts/log",
      "src/artifacts/screenshot",
      "src/artifacts/video",
      "src/devices/drivers/ios/tools/AppleSimUtils.js",
      "src/server/DetoxServer.js",
      "DeviceDriverBase.js",
      "AndroidDriver.js",
      "EmulatorDriver.js",
      "IosDriver.js",
      "SimulatorDriver.js",
      "AndroidDeviceAllocator.js",
      "MissingDetox.js",
      "EmulatorTelnet.js",
      "EmulatorExec.js",
      "EmulatorLauncher.js",
      "EmulatorDeviceAllocator.js",
      "DeviceDriverBase.js",
      "GREYConfiguration.js",
      "src/utils/environment.js",
      "src/utils/logger.js",
      "src/utils/onTerminate.js",
      "src/utils/pipeCommands.js",
      "src/utils/sleep.js",
      "AAPT.js",
      "ADB.js",
      "fsext.js",
      "debug.js",
      "src/ios/earlgreyapi",
      "src/android/espressoapi",
      "src/android/matcher.js",
      "src/ios/matchers.js",
      "appdatapath.js",
      ".mock.js",
      "src/ios/expect.js"
    ],
    "resetMocks": true,
    "resetModules": true,
    "coverageReporters": [
      "html",
      "json",
      "text",
      "clover",
      [
        "lcov",
        {
          "projectRoot": ".."
        }
      ]
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "gitHead": "5382d0892014880360b5d295ce979aceff80c965"
}
