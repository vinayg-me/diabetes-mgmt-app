{
  "name": "<%= props.name %>",
  "version": "0.0.1",
  "description": "<%= props.name %> CLI",
  "private": true,
  "bin": {
    "<%= props.name %>": "bin/<%= props.name %>"
  },
  "scripts": {
    <% if (props.typescript) { %>
      "format": "prettier --write **/*.{js,ts,tsx,json}",
    <% } else { %>
      "format": "prettier --write **/*.{js,json} && standard --fix",
      "lint": "standard",
    <% } %>
    "test": "ava",
    "watch": "ava --watch",
    "coverage": "nyc ava"
  },
  "files": [
    <% if (props.typescript) { %>
      "tsconfig.json",
    <% } %>
    "LICENSE",
    "readme.md",
    "docs",
    "bin",
    "src"
  ],
  "license": "MIT",
  "dependencies": {
    <% if (props.typescript) { %>
      "typescript": "^2.5.3",
      "ts-node": "^3.3.0",
    <% } -%>
    "gluegun": "next"
  },
  "devDependencies": {
    <% if (props.typescript) { %>
      "@types/node": "^8.0.47",
    <% } else { %>
      "standard": "^10.0.0",
      "babel-eslint": "^8.0.1",
    <% } %>
    "prettier": "^1.7.4",
    "ava": "^0.22.0",
    "nyc": "^11.2.1"
  }
  <% if (!props.typescript) { %>,
    "standard": {
      "parser": "babel-eslint"
    }
  <% } %>
}
